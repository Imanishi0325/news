<div class="container">
  <h4>投稿詳細ページ</h4>
  <div class="article">
    <p class="detail"><%= @article.text %></p>
  </div>
  
  <% if user_signed_in? %>
  <div id="comments-form-move" class="comments-form">
    <%= render partial: "top/show", locals: {comments: @comment, article: @article} %> 
    </div>
  <% end %>

  <div class="comments">   
      <% if @comments %>
        <% @comments.each do |comment| %>
        <p>
        <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
          <%= comment.text %>
        </p>
          <% if comment.user_id == current_user.id %>
            <strong><%= link_to "コメント削除", "/top/#{@article.id}/comments/#{comment.id}", method: :delete %></strong>
          <% end %>
        <% end %>
      <% end %>
    </div>
</div>