<div class="container">
  <h4>投稿詳細ページ</h4>
  <div class="article">
      <strong><%= link_to @article.user.nickname %></strong>
     <p class="detail"><%= @article.text %></p>
     <button class="btn" style="margin-left: 760px;" div="btn">コメントを見る</button>
    <% if user_signed_in? %>
    <id class="btn" id="btn">コメントする</id>
    <% end %>
  </div>
  
  <% if user_signed_in? %>
  <div class="comments-form">
      <div class="formarea">
        <% if current_user %>
          <%= form_tag("/top/#{@article.id}/comments", method: :post) do %>
            <div class="comments-text"><textarea name="text" placeholder="コメントする"></textarea></div>
            <button class="btn" type="submit" value="SENT" style="margin-top:15px">投稿する</button>
          <% end %>
        <% end %>
      </div>
    <script>
    $(function() {
        $('#btn').on('click', function() {
          if($('.formarea').css('display')=='none'){
              $('.formarea').slideDown();
          } else {
              $('.formarea').slideUp();
           }
          });
        });
    </script>
   </div>

  <div class="comments">
    <h4>コメント一覧</h4>
      <% if @comments %>
        <% @comments.each do |comment| %>
        <div class="comments-personal">
          <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
          <p class="comment-detail"><%= comment.text %></p>
          <% if comment.user_id == current_user.id %>
          <strong><%= link_to "コメント削除", "/top/#{@article.id}/comments/#{comment.id}", method: :delete %></strong>
        </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>