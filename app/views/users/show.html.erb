<div class="container">
  <h4 class="center-align">
    <%= @nickname %>さんの投稿一覧
  </h4>
  
    <div class="article">
      <div class="article-text">
          <% @articles.each do |article| %>
              <% if user_signed_in? && current_user.id == article.user_id %>
                  <h6><%= simple_format(article.text) %>
                  <div class="btn"><%= link_to '削除', "/top/#{article.id}", method: :delete %></div>
                  <div class="btn"><%= link_to '編集', "/top/#{article.id}/edit", method: :edit %></div>
                  </h6>
              <% end %>
          <% end %>
      </div>
    </div>
    <%= paginate(@articles) %>
</div>