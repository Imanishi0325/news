<div class="container">
  <h4 class="center-align">
    <%= @nickname %>さんの投稿一覧
  </h4>
  
    <div class="article">
      <div class="article-text">
          <% @articles.each do |article| %>
          <h6><%= simple_format(article.text) %></h6>
          <%= link_to "削除", "/top/:id/#{article.id}", method: :delete %>
          <% end %>
      </div>
    </div>
    <%= paginate(@articles) %>
</div>