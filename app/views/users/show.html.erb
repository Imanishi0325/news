<div class="container">
  <div class="container-user">
     <% if current_user.image.attached? %>
      <div class="user-image"><%= image_tag current_user.image %></div>
        <% else %>
      <div class="user-image"><%= image_tag 'Noimage_image.png' %></div>
        <% end %>
      <h5><%= current_user.nickname %><span>さんの投稿</span></h5>
  </div>
  
    <% @articles.each do |article| %>
        <div class="article">
            <p><%= article.text %></p>
            <% if user_signed_in? && current_user.id == article.user_id %>
              <div class="btn"><%= link_to '削除', "/top/#{article.id}", method: :delete %></div>
              <div class="btn"><%= link_to '編集', "/top/#{article.id}/edit", method: :get %></div>
              <button class="btn" style="margin-left: 570px;" id="btn">コメントを見る</button>
            <% end %>
        </div>
    <% end %>
    
    <div class="comments">
      <% if @comments %>
        <% @comments.each do |comment| %>
        <div class="comments-personal">
            <p class="comment-detail">
              <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
              <%= comment.text %>
            </p>
        </div>
        <% end %>
      <% end %>
      <script>
      $(function(){
        $('#btn').on("click", function() {
          if($('.comments').css('display')=='none'){
            $('.comments').slideDown();
          } else {
            $('.comments').slideUp();
          };
        });
      });
      </script>
    </div>
  <%= paginate(@articles) %>
</div>